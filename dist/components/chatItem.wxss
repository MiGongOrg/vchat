.chatItemContent .createTime {
  font-size: 20rpx;
  text-align: center;
  padding: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}
.chatItemContent .chatContentBox {
  display: flex;
}
.chatItemContent .userAvatar {
  padding: 0 20rpx;
}
.chatItemContent .userAvatar image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  vertical-align: middle;
}
.chatItemContent .chatContent {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
.chatItemContent .deleteBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 400rpx;
}
.chatItemContent .chatMsg {
  display: inline-block;
  color: #ffffff;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  max-width: 400rpx;
  background-color: rgba(0, 0, 0, 0.3);
}
