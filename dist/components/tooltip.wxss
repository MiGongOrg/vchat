.tooltip {
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 100%;
  z-index: 999;
}
.tooltip-inner {
  position: absolute;
  right: 50rpx;
  top: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
  background-color: #00E7C1;
}
.tooltip:before {
  position: absolute;
  top: -10rpx;
  right: 130rpx;
  width: 0;
  height: 0;
  border-color: transparent;
  border-style: solid;
  border-bottom-color: #00E7C1;
  content: "";
  border-width: 0 10rpx 10rpx;
}
.tooltip text {
  display: inline-block;
  font-size: 24rpx;
  text-align: center;
  color: white;
}
.tooltip icon {
  display: block;
  margin-left: 10rpx;
}
